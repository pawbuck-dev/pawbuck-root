{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".expo/**", "dist/**", ".next/**"]
    },
    "test": {
      "dependsOn": [],
      "cache": false
    },
    "lint": {
      "dependsOn": [],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": ["**/.env.*local"]
}
